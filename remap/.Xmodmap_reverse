! for upside down keyboard (not in use)
! make sure return key exists
keycode 221 = Return
! make sure cedilla exists
keycode 220 = cedilla

! caps
keycode 35 = Mode_switch 
keycode 21 = Shift_L
keycode 36 = Tab

! number row{{{
