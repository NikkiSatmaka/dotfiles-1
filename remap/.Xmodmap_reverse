! Thumb keys! {{{
! super
keycode 76 = Hyper_L

keycode 75 = Alt_L
keycode 74 = space
! shift and escape
keycode 73 = Shift_L

! super and cedilla (c-backspace)
keycode 72 = Hyper_R
add mod4 = Hyper_R Hyper_L
! altgr/enter
keycode 71 = ISO_Level3_Shift
! backup control and Tab
clear control
keycode 70 = Control_R
add control = Control_R Control_L
! }}}
! in case
keycode 37 = Caps_Lock
keycode 127 = ISO_Level3_Lock
keycode 115 = KP_Add
