// see ./README.org for explanation/logic
{
    "fullName": "Colemak-DvbgHk Angle(z) Wide Custom",
    "name": "colemak_dh_custom",
    "shiftlevels": [ "None", "Shift", "AltGr", "Shift+AltGr", "Extend" ],
    "singletonKeys": [
        // dual-role: BackSpace
        [ "CapsLock", "Extend" ],
        // dual-role: tab
        [ "Win_L", "Control" ],
        // backup win
        [ "Control_L", "Win" ],
        // backup caps
        [ "KP_Min", "CapsLock" ],
        // dual-role: Escape
        [ "Alt_L", "Shift" ],
        // dual-role: Return
        [ "Alt_R", "AltGr" ],
        // dual-role: (
        [ "PrintScreen", "Alt" ],
        [ "Control_R", "PrintScreen" ]
        // hyper/super on thumb mouse buttons
        // ("meta" actions; used outside programs; other modifiers used in program)
    ],
    "keys": [
        { "pos": "~", "letters": [ "", "" ] },
        // above not 30%; disable
        { "pos": "1", "letters": [ "1", "!", "Switch_VT_1" ] },
        { "pos": "2", "letters": [ "2", "@", "Switch_VT_2" ] },
        { "pos": "3", "letters": [ "3", "#", "Switch_VT_3" ] },
        { "pos": "4", "letters": [ "4", "$", "Switch_VT_4" ] },
        { "pos": "5", "letters": [ "5", "%", "Switch_VT_5" ] },
        { "pos": "6", "letters": [ "6", "^", "Switch_VT_6" ] },
        { "pos": "7", "letters": [ "7", "&", "Switch_VT_7" ] },
        { "pos": "8", "letters": [ "8", "*", "Switch_VT_8" ] },
        { "pos": "9", "letters": [ "9", "(", "Switch_VT_9" ] },
        { "pos": "0", "letters": [ "0", ")", "Switch_VT_10" ] },
        // not 30% but allow because password muscle memory
        { "pos": "-", "letters": [ "-", "_", "Switch_VT_11" ] },
        { "pos": "+", "letters": [ "=", "+", "Switch_VT_12" ] },

        { "pos": "Q", "letters": [ "q", "Q", "`", "~" ] },
        // doesn't work with kitty
        // { "pos": "W", "letters": [ "w", "W", "[", "]", "Control+w" ] },
        { "pos": "W", "letters": [ "w", "W", "[", "]", "Â¸" ] },
        // { "pos": "E", "letters": [ "f", "F", ")", ")", "Control+f" ] },
        { "pos": "E", "letters": [ "f", "F", ")", ")", "`" ] },
        { "pos": "R", "letters": [ "p", "P", "{", "}" ] },
        { "pos": "T", "letters": [ "b", "B", "\\", "|" ] },
        { "pos": "Y", "letters": [ "j", "J", "@", "@" ] },
        { "pos": "U", "letters": [ "l", "L", "_", "_", "BackSpace" ] },
        { "pos": "I", "letters": [ "u", "U", "-", "_", "Home" ] },
        { "pos": "O", "letters": [ "y", "Y", "=", "+", "End" ] },
        { "pos": "P", "letters": [ ";", ":", "!", "!", "Alt+f" ] },
        // not 30%; force to stop using
        { "pos": "[", "letters": [ "z", "" ] },
        { "pos": "]", "letters": [ "x", "" ] },
        // won't use on normal keyboard or will need on jp keyboard
        { "pos": "\\", "letters": [ "'", "\"" ] },


        { "pos": "A", "letters": [ "a", "A", "1", "!" ] },
        { "pos": "S", "letters": [ "r", "R", "2", "@" ] },
        { "pos": "D", "letters": [ "s", "S", "3", "#" ] },
        { "pos": "F", "letters": [ "t", "T", "4", "$" ] },
        { "pos": "G", "letters": [ "g", "G", "|", "|" ] },
        { "pos": "H", "letters": [ "k", "K", "&", "&", "Alt+b" ] },
        { "pos": "J", "letters": [ "n", "N", "7", "&", "Down" ] },
        { "pos": "K", "letters": [ "e", "E", "8", "*", "Up" ] },
        { "pos": "L", "letters": [ "i", "I", "9", "(", "Right" ] },
        { "pos": ";", "letters": [ "o", "O", "0", ")", "PageUp" ] },
        // not 30% but allow since have on thumb key on external board
        { "pos": "'", "letters": [ "'", "\"" ] },

        { "pos": "Z", "letters": [ "x", "X", "~", "~" ] },
        { "pos": "X", "letters": [ "c", "C", "#", "#" ] },
        { "pos": "C", "letters": [ "d", "D", "5", "%" ] },
        { "pos": "V", "letters": [ "v", "V", "^", "^" ] },
        { "pos": "B", "letters": [ "z", "Z" ] },
        { "pos": "N", "letters": [ "m", "M", "$", "$", "PageDown" ] },
        { "pos": "M", "letters": [ "h", "H", "6", "^", "Left" ] },
        { "pos": ",", "letters": [ ",", "<", "+", "+" ] },
        { "pos": ".", "letters": [ ".", ">" , "*", "*" ] },
        { "pos": "/", "letters": [ "/", "?", "%", "%" ] }

        // needed if modifier combinations not being detected by sxhkd
        // { "pos": "A", "shiftlevels": [ "Win+AltGr" ], "letters": [ "Win+1" ] }
        // ...
    ],
    "mods": [
        { "name": "Wide",
		  "permutation": [
			  [ "Y", "U", "I", "O", "P", "[" ],
			  [ "H", "J", "K", "L", ";", "'", "Enter" ],
			  [ "N", "M", ",", ".", "/", "Shift_R" ]
		  ]},
		{
			"name": "Wide-ja",
			"permutation": [
				[ "Y", "U", "I", "O", "P", "[" ],
				[ "H", "J", "K", "L", ";", "'", "Enter" ],
				[ "N", "M", ",", ".", "/", "Ro" ],
				// use closestkeys to spacebar as thumb modifiers
				[ "Control_L", "Win_L", "Alt_L", "Muhenkan" ],
				[ "Henkan", "Alt_r" ],
				// found with grep 101 /usr/share/X11/xkb/keycodes/evdev (found
				// 101 from xev)
				[ "HKTG", "PrintScreen" ]
			]
			// { "name": "DH-angle-z",
		//   "permutation": [
        //       [ "C", "X", "Z", "B" ],
        //       [ "D", "B", "G" ],
        //       [ "H", "M" ]
        //   ]}
		}
    ]
}
