# * Single-key Hotkeys
# desktop switching
{a,r,s,t,d,h,n,e,i,o}
	wm_action dsel {1-9,10}

# launcher
space
	launcher

u
	urxvt

k
	kitty

l
	wm_action dsel last

# focus only of course
f
	dropdown -s dropdown kitty

semicolon ; f
	firejail --seccomp firefox

q
	firejail --seccomp qutebrowser --enable-webengine-inspector

semicolon ; e
	LC_CTYPE=ja_JP.UTF-8 emacsclient -c -a ""

v
	LC_CTYPE=ja_JP.UTF-8 emacsclient -c -a ""
