# - move files to ~/.config/ncmpcpp/
#   https://github.com/arybczak/ncmpcpp/issues/91

# * General
mpd_music_dir = ~/music
ncmpcpp_directory = ~/.ncmpcpp
mpd_port = 6600
mpd_host = localhost

media_library_primary_tag = album_artist

ask_before_clearing_playlists = no

# e.g. puts "The Beatles" in the B section
# alternatively can use beets plugin to change metadata to "Beatles, The"
ignore_leading_the = yes

# * Visualizer
visualizer_fifo_path = /tmp/mpd.fifo
visualizer_in_stereo = yes
# spectrum or wave
visualizer_type = spectrum
# first for wave; second for spectrum
visualizer_look = ◆▋
visualizer_color = green

# * Appearance
display_bitrate = yes
# e.g. show "Album Artists | Albums | Songs" over columns
titles_visibility = no
# whether to show top bar (e.g. "Playlist" or "Media Library")
header_visibility = yes

# playlist view
playlist_display_mode = classic
playlist_separate_albums = yes

# green and blue theme (like vimus)
main_window_color = blue
main_window_highlight_color = green
active_column_color = cyan
statusbar_color = blue
progressbar_color = blue
# in the bottom bar: Artist - Song [Album Track#]
song_status_format = $7%a$9 - $7%t$9 [$7%b$9 $2%n$9]

