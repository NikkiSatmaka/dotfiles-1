set -g pane-active-border-fg 'red'
set -g pane-border-fg 'colour231'

setw -g window-status-attr 'none'
setw -g window-status-activity-bg 'colour234'
setw -g window-status-activity-attr 'none'
setw -g window-status-activity-fg 'colour250'
setw -g window-status-separator '|'
setw -g window-status-bg 'colour234'

set -g status-left "#[fg=colour15,bg=colour239,nobold,nounderscore,noitalics]#{prefix_highlight} #S:#I.#P|#[fg=colour31,bg=colour15,italics]#h#[fg=colour15,bg=colour239,noitalics]|#[fg=colour15,bg=colour236]"

set -g status-right ""

setw -g window-status-format '#[fg=colour15,bg=colour238] #I #W '
setw -g window-status-current-format '#[fg=colour231,bg=colour31] #I #W '

set -g status 'on'
set -g status-bg 'colour236'
set -g status-fg 'colour15'
set -g status-left-length '100'
set -g status-right-length '0'
set -g status-attr 'none'
set -g status-left-attr 'none'
set -g status-right-attr 'none'
set-option -g status-justify "left"

set -g message-bg 'colour31'
set -g message-fg 'colour15'
set -g message-command-fg 'colour15'
set -g message-command-bg 'colour31'
