#! /bin/sh
#
# Example panel for LemonBoy's bar
# updated for syntax change with my modifications
# https://github.com/baskerville/bspwm/blob/master/examples/panel/panel_bar

# Colours#{{{
COLOR_STATUS_FG='#FF6C7A80'
# stop transparency (FF alpha channel)
COLOR_FOREGROUND='#FF34322E'
COLOR_BACKGROUND='#FF232C31'

# old default colours (https://github.com/LemonBoy/bar/blob/3f4ed1600ad1f1bc3a1e838f3c0282ff9b4b1966/config.def.h)
C_0='#FF2D3C46'
C_1='#FFAC4142'
C_2='#FF90A959'
lighter_green='#FFA9D152'
C_3='#FFDE935F'
C_4='#FF6A9FB5'
C_5='#FFAA759F'
C_7='#FF6C7A80'
C_9='#FFCC6666'
COLOR_EIGHT='#FF425059'
COLOR_NINE='#FFFF6666'
light_pink='#FFFFD6FC'
gray_pink='#FFD9CAD7'
bright_pink='#FFFF78FF'
other='#FF7A52D1'
lighter_c_4='#FF78B3CC'
#}}}

# bspwm and arch symbol from uushi
bspwm="%{B$COLOR_BACKGROUND}%{F$COLOR_EIGHT}%{F$COLOR_NINE} ⮗ bspwm%{F$COLOR_EIGHT}"

while read -r line ; do
	cpu_temp="%{F$lighter_green}$(acpi -t | awk '{print $4}')°C"
	song=$(mpc current -f "%artist% - %title%")
	# cut anything in parens from song title
	songy=${song%(*}
	song_final="%{F$lighter_green}⮕ $songy"
	case $line in
		S*)
			# clock output
			sys_infos="%{F$C_7}${line#?}"
			;;
		T*)
			# xtitle output
			title=$(echo "${line#?}" | cut -c 1-70)
			title_final="%{F$lighter_c_4}⮠ ${title%-*} ♠"
			# title="%{F$other}⮠ ${line#?} ♠"
			;;
		W*)
			# bspwm internal state
			wm_infos=""
			IFS=':'
			set -- ${line#?}
			while [ $# -gt 0 ] ; do
				item=$1
				name=${item#?}
				case $item in
					O*)
						# focused occupied desktop
						wm_infos="$wm_infos %{U$C_3}%{F$bright_pink}%{+u}${name}%{-u}"
						;;
					F*)
						# focused free desktop
						wm_infos="$wm_infos %{U$C_4}%{F$gray_pink}%{+u}${name}%{-u}"
						;;
					U*)
						# focused urgent desktop
						wm_infos="$wm_infos %{U$C_9}%{+u}${name}%{-u}"
						;;
					o*)
						# occupied desktop
						wm_infos="$wm_infos %{F$light_pink}${name}"
						;;
					f*)
						# free desktop
						wm_infos="$wm_infos %{F$C_7}${name}"
						;;
					u*)
						# urgent desktop
						wm_infos="$wm_infos %{B$C_1}${name}"
						;;
					L*)
						# layout
						layout=$(printf "%s" "${name}" | sed 's/\(.\).*/\U\1/')
						wm_infos="$wm_infos  %{F$C_2}$layout"
						;;
				esac
				shift
			done
			;;
	esac
	printf "%s\n" "%{l}$bspwm $wm_infos  $song_final %{c} $title_final %{r} $sys_infos"
done
