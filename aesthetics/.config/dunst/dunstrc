# see ~/bin/dunstrun (or ../../../scripts/bin/dunstrun)

# TODO make issue for conditional import so don't need to concatenate files
# https://github.com/dunst-project/dunst/commit/ce8fe45cbf81b351b6802c25563b60e418d271cf
# see /usr/share/dunst/dunstrc for documentation

# * Global
[global]
    font = Office Code Pro 9

	# don't scale; also scales offset; already handling everything manually
	# which is easier
	scale = 1
	# these will be replaced automatically based on monitor dimensions
    geometry = "400x5-0+14"
	corner_radius = 15
	frame_width = 7
	separator_height = 3

	separator_color = frame

    # Display notification on focused monitor.  Possible modes are:
    #   mouse: follow mouse pointer
    #   keyboard: follow window with keyboard focus
    #   none: don't follow anything
    #
    # "keyboard" needs a window manager that exports the
    # _NET_ACTIVE_WINDOW property.
    # This should be the case for almost all modern window managers.
    #
    # If this option is set to mouse or keyboard, the monitor option
    # will be ignored.
    follow = none

    # Paths to default icons.
    icon_path = /usr/share/icons/Numix/16/status/:/usr/share/icons/Numix/16/devices/:/usr/share/icons/Numix/16/emotes/:/usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/
