format-connected-foreground = ${colors.dark-cyan}

format-disconnected = 
format-disconnected-foreground = ${colors.dark-cyan}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-font = 11

[module/eth]
