#!/usr/bin/env bash
# set up keyboard layout

# using these as thumbkeys (see ~/.config/sxhkd/sxhkdrc)
xinput --set-button-map "TPPS/2 IBM TrackPoint" 50 1 51

if [[ -n $1 ]]; then
	# regenerate layout
	klfc --from-json ~/dotfiles/remap/.colemak-DH-custom.json --xkb xkb
fi

~/dotfiles/remap/xkb/run-session.sh -m Wide

# KP_0; backup super for now
xmodmap -e "keycode 90 = Super_L"

rldxcape
