#!/usr/bin/env bash
# meant to be called before starting X to restore
# does not reload for running applications

# wal version breaks stumpwm; what about this?
setup_file=~/.config/wpg/wp_init.sh
if [[ -f $setup_file ]]; then
	"$setup_file" &> /dev/null
fi

# wpg merges user .Xresources afterwards (and mine contains default colors)
# redo colors
echo "Re-updating .Xresources as workaround (e.g. for polybar)"
xrdb -merge ~/.cache/wal/colors.Xresources
