# TODO find nice icon theme and use drun

# * Settings
# run on current monitor instead of monitor mouse is on
rofi.m: -1

# honor X11 dpi; too large if use 1 which checks monitor size
rofi.dpi: 0

rofi.matching: fuzzy

# center selected instead of paging
rofi.scroll-method: 1

# S-RET for run mode to run in terminal
rofi.terminal: kitty
rofi.run-shell-command: {terminal} {cmd}

# * Appearance
rofi.font: Fira Mono 12

# works for drun and window modes (not run)
rofi.show-icons: true

# pywal
# dark theme
# rofi.theme: ~/.cache/wal/colors-rofi-dark.rasi
# light theme
rofi.theme: ~/.cache/wal/colors-rofi-light.rasi

# * Keybindings
# clipboard paste keys
rofi.kb-secondary-paste:             Control+v,Insert,Control-y

# remove default C-w keybinding
rofi.kb-clear-line: Control+Shift+BackSpace
# rebind C-w
rofi.kb-remove-word-back: Control-w,cedilla
